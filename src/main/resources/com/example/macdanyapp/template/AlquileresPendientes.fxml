<VBox alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.macdanyapp.controllers.AlquileresPendientesController">
    <!-- Margen interno del VBox -->
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <HBox alignment="CENTER" spacing="10.0">
        <TextField fx:id="searchFieldAlquilerPendientes" promptText="Seleccionar Alquiler Pendientes" prefWidth="500" />
        <TextField fx:id="searchFieldAlquilerPendientesHoy" promptText="Seleccionar Alquiler DÃ­a de Hoy" prefWidth="500" />
    </HBox>
    <HBox alignment="CENTER" spacing="10.0">
        <ListView fx:id="listViewAlquileresPendientes" prefHeight="600" prefWidth="500"/>
        <ListView fx:id="listViewAlquileresPendientesDiaDeHoy" prefHeight="600" prefWidth="500"/>
    </HBox>

    <HBox alignment="CENTER" spacing="350.0">
        <Button text="Modificar Datos" fx:id="buttonModificarAlquiler"  onAction="#buttonModificarAlquiler" prefWidth="180"/>
        <Button text="Activar alquiler" fx:id="buttonActivarAlquiler"  onAction="#buttonActivarAlquiler" prefWidth="180"/>
    </HBox>

    <!--Hay que mostrar en textField los datos del alquiler y que se puedan modificar y se tomen esos nuevos valores y se modifique el alquiler-->

    <Button text="Volver" fx:id="buttonVolver"  onAction="#buttonVolver" prefWidth="180"/>
    <Label fx:id="lblCorrecto"  text="Alquiler finalizado" textFill="green" visible="false" />
</VBox>
