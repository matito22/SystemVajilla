<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.macdanyapp.controllers.CrearNuevoClienteController">
    <!-- Margen interno del VBox -->
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <!-- TÃ­tulo -->
    <Label text="Add User" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <!-- Campo de texto para el nombre de usuario -->
    <TextField fx:id="txtNombreCliente" promptText="Nombre" />

    <TextField fx:id="txtApellidoCliente" promptText="Apellido" />

    <TextField fx:id="txtTelefonoCliente" promptText="Tel" />

    <TextField fx:id="txtDomicilioCliente" promptText="Domicilio" />

    <Button fx:id="buttonCrear" text="Crear" onAction="#buttonCrear"/>

    <!-- Etiqueta para mostrar mensajes -->
    <Label fx:id="lblError"  text="Campo vacio o erroneo" textFill="red" visible="false" />

</VBox>
